<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp"
            app:cardBackgroundColor="#fdc10c"
            app:cardCornerRadius="10sp"
            app:contentPadding="5dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_color"
                android:gravity="end|top"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/slabo27px_regular"
                        android:text="Title"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/ivInstitutionMap"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/text_link_selector_bg"
                        android:src="@drawable/gps" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorOrange" />

                <TextView
                    android:id="@+id/tvDescription2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo27px_regular"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10sp"
                    android:text="Title"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>