<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:paddingLeft="25sp"
                android:paddingTop="25sp"
                android:paddingRight="50sp"
                android:scaleType="centerCrop"
                android:src="@drawable/building3" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:padding="15sp"
                android:src="@drawable/logo05" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llAboutUs"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_link_selector_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:padding="10sp"
                        android:src="@drawable/about"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center|start"
                        android:text="ABOUT US"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,NestedWeights" />
                </LinearLayout>


                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorRed" />

                <LinearLayout
                    android:id="@+id/llCircular"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_link_selector_bg"
                    android:gravity="center"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:padding="10sp"
                        android:src="@drawable/ic_circural"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center|start"
                        android:text="CIRCULAR"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,NestedWeights" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_link_selector_bg"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:padding="10sp"
                        android:src="@drawable/bible" />

                    <TextView
                        android:id="@+id/tvDailyReading"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center|start"
                        android:paddingLeft="5sp"
                        android:text="Daily Readings"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_link_selector_bg"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:src="@drawable/saint" />

                    <TextView
                        android:id="@+id/tvSaint"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center|start"
                        android:paddingStart="5sp"
                        android:paddingLeft="5sp"
                        android:text="Saint of the day"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/MessageCard"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_link_selector_bg"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:padding="5sp"
                        android:src="@drawable/prayer" />

                    <TextView
                        android:id="@+id/tvCatholicPrayer"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center|start"
                        android:paddingLeft="5sp"
                        android:text="Catholic Prayers"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvCuria"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_link_selector_bg"
                    android:fontFamily="@font/slabo27px_regular"
                    android:gravity="center"
                    android:text="Curia / Offices"
                    android:textColor="@color/colorRed"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorRed" />

                <TextView
                    android:id="@+id/tvPublications"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_link_selector_bg"
                    android:fontFamily="@font/slabo27px_regular"
                    android:gravity="center"
                    android:text="Publications"
                    android:textColor="@color/colorRed"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#fdc20f"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_link_selector_bg"
                        android:src="@drawable/facebook2" />

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/colorRed" />

                    <ImageView
                        android:id="@+id/ivInstagram"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_link_selector_bg"
                        android:src="@drawable/instagram2" />

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/colorRed" />

                    <ImageView
                        android:id="@+id/ivFlicker"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_link_selector_bg"
                        android:src="@drawable/flicker" />

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/colorRed" />

                    <ImageView
                        android:id="@+id/ivRadio"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_link_selector_bg"
                        android:padding="10sp"
                        android:src="@drawable/radio3" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="1dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDonate"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_link_selector_bg"
                        android:fontFamily="@font/slabo27px_regular"
                        android:gravity="center"
                        android:text="Please donate for a cause "
                        android:textColor="@color/colorPrimaryYelloWT"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnVIP"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="5sp"
            android:layout_weight="0.5"
            android:fontFamily="@font/slabo27px_regular"
            android:gravity="center"
            android:text="Clergy"
            android:visibility="gone"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="5sp"
            android:layout_weight="0.5"
            android:fontFamily="@font/slabo27px_regular"
            android:gravity="center"
            android:visibility="gone"
            android:text="Logout"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>